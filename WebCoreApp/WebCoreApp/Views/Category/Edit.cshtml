@model CategoryViewModel
<h1>Sửa Thông Tin Sản Phẩm</h1>
<p class="text-danger">
	@{
		var message = ViewBag.Message;
	}
	@message
</p>
<div>
	<form method="post" asp-action="Edit">
		<div>
			<input type="hidden" id="id" name="CategoryResponse.Id" value="@Model.CategoryResponse.Id" />
			<label class="form-label" for="name">Tên Danh Mục</label>
			<input class="form-control" type="text" id="name" name="CategoryResponse.Name" value="@Model.CategoryResponse.Name" required />
		</div>
		<div>
			<button class="btn btn-primary" type="submit">Cập Nhập</button>
			<a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
		</div>
	</form>
</div>